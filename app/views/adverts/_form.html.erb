<%= form_for(@advert) do |f| %>

  <div class="errors">
    <ul>
      <% @advert.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <div>

  <div>
    <div>
      <%= f.label :content %><br/>
      <%= f.text_area :content %>
      <br/>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
      <br/>
      <%= f.label :phone %><br/>
      <%= f.text_field :phone %>
      <br/>
      <%= f.label :skype %><br/>
      <%= f.text_field :skype %>
      <br/>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
      <br/>
      <%= f.label :icq, "ICQ" %><br/>
      <%= f.text_field :icq %>
      <br/>
      <%= f.label :category_id, "Категория" %><br/>
      <%= f.collection_select(:category_id, Category.allcategories, :id, :name, include_blank: "Выберите категорию")
      %>
    </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>