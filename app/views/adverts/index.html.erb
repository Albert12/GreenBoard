<h1 class="text-center">GreenBoard</h1>

  <% @adverts.each do |advert| %>

  <div class="container">
    <div class="row adv_backgr_color">

      <div class="span9">
        <div class="row">
          <div class="span6 text-left blue_text">No: <%= advert.id %></div>
          <div class="span3 text-right blue_text"><%= advert.created_at.strftime("%d/%m/%Y %H:%M") %></div>
        </div>
      <br>
      <%= advert.content %>
      <br><br>
      <% unless advert.price.nil? || advert.price == 0 %>
      <div>Price, RUR: <%= number_with_delimiter(advert.price, delimiter: " ") %></div>
      <% end %>
      <% unless advert.original_ad_url.nil? %>
      <div><%= link_to 'Original ad', advert.original_ad_url %></div>
      <% end %>
      </div>

      <div class="span3">
        <ul class="unstyled">
          <li><b>Contacts</b></li>
          <li>Name: <%= advert.name %></li>
          <li>Phone: <%= advert.phone %></li>
          <li>Skype: <%= advert.skype %></li>
          <li>Email: <%= advert.email %></li>
          <li>ICQ: <%= advert.icq %></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row adv_backgr_color">
      <div class="span9">
        <div class="row">
          <div class="span6 text-left blue_text"><br><%= advert.category.title %></div>
          <div class="span3 text-right">
            <ul class="inline">
              <li class="btn"><%= link_to 'Show', advert %></li>
              <li class="btn"><%= link_to 'Destroy', advert, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
<% end %>

<div class="container text-center">
  <div class="span12">
    <div class="row">
      <div class="btn"><%= link_to 'New Advert', new_advert_path %></div>
    </div>
    <br>
    <div class="row">
      <div class="label label-success">Views: <%= @vcounter %></div>
    </div>
  </div>
</div>