<h1>GreenBoard</h1>

  <div class="id common">ID</div>
  <div class="cont common">Content</div>
  <div class="time common">Time</div>
  <br><br>

<% @adverts.each do |advert| %>
  <div class="id common"><%= advert.id %></div>
  <div class="cont common"><%= advert.content %></div>
  <div class="time common"><%= advert.created_at.strftime("%d/%m/%Y %H:%M") %></div>
  <div class="actions common"><%= link_to 'Show', advert %></div>
  <div class="actions common"><%= link_to 'Destroy', advert, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  <br><br>
  <% end %>

